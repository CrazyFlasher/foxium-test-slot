{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "sourceMap": true,
    "target": "ES2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true
  },
  "include": ["src/**/*", "scripts/**/*"]
}